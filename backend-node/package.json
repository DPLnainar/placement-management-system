{
  "name": "college-placement-backend",
  "version": "1.0.0",
  "description": "Role-based authentication system for college placement management",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node start.js",
    "dev": "nodemon --exec ts-node --transpile-only -r tsconfig-paths/register src/server.ts",
    "dev:watch": "tsc --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "seed": "ts-node -r tsconfig-paths/register src/scripts/seedAdmin.ts",
    "create-admin": "ts-node -r tsconfig-paths/register src/scripts/createAdminInteractive.ts",
    "seed-superadmin": "ts-node -r tsconfig-paths/register src/scripts/seedSuperAdmin.ts"
  },
  "keywords": [
    "authentication",
    "role-based",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.948.0",
    "@aws-sdk/s3-request-presigner": "^3.943.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/node-cron": "^3.0.11",
    "@types/puppeteer": "^5.4.7",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.66.0",
    "cloudinary": "^1.41.3",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.0.1",
    "form-data": "^4.0.5",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "multer": "^2.0.2",
    "multer-s3": "^3.0.1",
    "multer-storage-cloudinary": "^4.0.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.11",
    "puppeteer": "^24.33.0",
    "redis": "^5.10.0",
    "socket.io": "^4.8.1",
    "uuid": "^13.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/express-validator": "^3.0.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.19.25",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}