{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "dist/*"
            ],
            "@models/*": [
                "dist/models/*"
            ],
            "@controllers/*": [
                "dist/controllers/*"
            ],
            "@routes/*": [
                "dist/routes/*"
            ],
            "@middleware/*": [
                "dist/middleware/*"
            ],
            "@services/*": [
                "dist/services/*"
            ],
            "@utils/*": [
                "dist/utils/*"
            ],
            "@config/*": [
                "dist/config/*"
            ]
        }
    }
}